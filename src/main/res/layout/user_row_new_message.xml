<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp">


    <TextView
            android:text="UserName"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:id="@+id/textView_new_message"
            app:layout_constraintStart_toEndOf="@+id/circleImageView_profile_picture"
            app:layout_constraintBottom_toBottomOf="@+id/circleImageView_profile_picture"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginStart="16dp"
            app:layout_constrainedHeight="false" app:layout_constrainedWidth="false"
            app:layout_constraintTop_toTopOf="@+id/circleImageView_profile_picture" android:layout_marginTop="8dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="60dp"
            app:civ_border_width="2dp"
            android:layout_height="60dp"
            android:id="@+id/circleImageView_profile_picture"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"/>
</android.support.constraint.ConstraintLayout>