<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content"
    android:layout_marginBottom="16dp">
    <TextView
            android:text="This is my message and that will wrap multiple line and keep going. Happy Coding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:maxWidth="240dp"
            android:background="@drawable/edittext_background"
            android:id="@+id/from_row_textview" app:layout_constraintStart_toEndOf="@+id/imageView_from"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView" android:layout_marginTop="16dp"
            app:layout_constraintHorizontal_bias="0.13" android:layout_marginStart="8dp"/>
    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@android:drawable/btn_dialog"
            android:id="@+id/imageView_from"
            app:civ_border_width="2dp"
            app:civ_border_color="@android:color/black"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textView_to_row"/>
</android.support.constraint.ConstraintLayout>